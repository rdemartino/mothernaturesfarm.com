<!doctype html>
<html class="no-js" lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title | Mother Nature's Farm</title>
    
    <meta name="description" content="@ViewBag.MetaDescription">

    <!-- Favicons & Facebook sharing -->
    <link rel="apple-touch-icon-precomposed" href="/Content/Images/favicon-152.png">
    <meta name="msapplication-TileColor" content="#213553">
    <meta name="msapplication-TileImage" content="/Content/Images/favicon-144.png">

    <meta property="og:title" content="" />
    <meta property="og:description" content="" />
    <meta property="og:image" content="/Content/Images/fbimage.png" />

    <!-- Custom Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Carter+One|Open+Sans:400,800" rel="stylesheet">

    <!-- replace with only the icons needed
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"-->

    @Styles.Render("~/styles/default")
    @Scripts.Render("~/scripts/modernizr")
</head>
<body>
<!--[if lt IE 7]>
    <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
<![endif]-->
    <div class="site-container">
       
        <div class="row">
            <div class="large-12 column">
                <div class="top-bar">
                    <div class="top-bar-left">
                        <div class="menu-logo">
                            <a href="/"><img src="/Content/Images/mothernaturesfarm-logo.png" alt="Mother Nature's Farm - Gilbert AZ" /></a>
                        </div>
                        <ul class="menu" id="header-menu">
                            <li class="home"><a href="/">Home</a></li>
                            <li><a href="/our-story">Our Story</a></li>
                            <li><a href="/calendar">Calendar</a></li>
                            <li><a href="/parties">Groups &amp; Parties</a></li>
                            <li><a href="/contactus">Contact</a></li>
                            <li><a href="/location">Directions</a></li>
                        </ul>
                        <div class="menu-toggle">
                            <button class="button menu-icon-ani" id="menuToggle"><span>Menu</span></button>
                        </div>
                    </div>
                    <div class="top-bar-right ">
                        <div class="top-bar-hours">
                            <strong>October Hours</strong>
                            <em>9am to 9pm</em>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content">
            @RenderBody()
        </div>

    </div>

    <div class="footer-scene">
        <div class="pumpkins"><img src="/Content/Images/scene-pumpkins.png" alt="Pumpkins at Mother Nature's Farm"/></div>
        <div class="clouds front">&nbsp;</div>
        <div class="fence">&nbsp;</div>
        <div class="grass"><img src="/Content/Images/scene-grass.png" alt="Grass on the Farm"/></div>
        <div class="clouds medium">&nbsp;</div>
        <div class="clouds back">&nbsp;</div>
    </div>
    <div class="footer">

        <div class="row footer-main-row">
            <div class="large-12 column">
                <a href="/" class="logo"><img src="/Content/Images/mothernaturesfarm-logo-white.png" alt="Mother Nature's Farm - Gilbert AZ"/></a>
            </div>
            <div class="large-6 column footer-left">
                <strong>(480) 892-5874</strong>
                <span>Fax: (480) 507-0074</span>
            </div>
            <div class="large-6 column footer-right">
                <a href="https://www.google.com/maps?f=q&source=embed&hl=en&geocode&q=1663+E.+Baseline+RD.,+Gilbert,+AZ+85233-1542&sll=37.0625,-95.677068&sspn=54.489258,113.818359&ie=UTF8&hq&hnear=1663+E+Baseline+Rd,+Gilbert,+Maricopa,+Arizona+85233&ll=33.376412,-111.795502&spn=0.034404,0.054932&z=14&iwloc=A" target="_blank">
                    <strong>1663 E. Baseline Rd. Gilbert, AZ 85233</strong>
                    <span>Located On Baseline Just East of Stapley</span>
                </a>
            </div>
        </div>
        <div class="row footer-bottom-line">
            <div class="medium-8 column show-for-medium">
                <ul class="menu">
                    <li><a href="/">Home</a></li>
                    <li>@Html.ActionLink("Our Story", "OurStory", "Home")</li>
                    <li><a href="/calendar">Calendar</a></li>
                    <li><a href="/parties">Groups &amp; Parties</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <li><a href="/location">Directions</a></li>
                </ul>
            </div>
            <div class="medium-4 column">
                <div class="copyright">
                    <a href="/">&copy; @{ DateTime.Now.ToString("yyyy");} Mother Nature's Farm</a>
                </div>
            </div>

        </div>

    </div><!-- .footer -->
    
@Scripts.Render("~/scripts/jquery")
@Scripts.Render("~/scripts/common")
   
<script src="/Content/Scripts/moment.min.js"></script>
<script src="/Content/Scripts/fullcalendar.min.js"></script>
<script src="/Content/Scripts/gcal.min.js"></script>

@RenderSection("scripts", required: false)

<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-54629411-2', 'auto');
    ga('send', 'pageview');
</script>
    
</body>
</html>
