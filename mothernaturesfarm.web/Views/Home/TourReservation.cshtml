@model mothernaturesfarm.web.ViewModels.VMTourReservation
@{
    ViewBag.Title = "School Tour Reservations";
    ViewBag.PgHdrPhoto = "photo-wide-animal-1.jpg";
    ViewBag.MetaDescription = "Bring your class for a fun farm experience. Trips include a pumpkin, a hayride, air bounce, feeding the farm animals and Alexander's Adventure Maze.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    @Scripts.Render("~/scripts/pgtourres")
}
@Html.Partial("_PageHeader")

<div class="row content-block blue medium-collapse box white-border">
    <div class="large-8 medium-6 column">
        <div class="inner">
            <h2>Reservation Form</h2>
            <p>School tours run from October 1st, 2018 through October 31st 2018. Minimum tour group size is 20 children.</p>

            @using (Html.BeginForm("TourReservation", "Home", FormMethod.Post))
            {
                <div class="form-ctr">
                    <div class="group">
                        <h4>School Information</h4>                        
                        <label>
                            School Name
                            @Html.TextBoxFor(m=>m.SchoolName, new {placeholder="School Name...", required="required"})
                        </label>
                        <h5>School Address</h5>
                        <div class="row subgroup">
                            <div class="column medium-12">
                                <label>
                                    School Address
                                    @Html.TextBoxFor(m=>m.SchoolAddress, new {placeholder="School Address...", required="required"})
                                </label>
                            </div>
                            <div class="column medium-6">
                                <label>
                                    City
                                    @Html.TextBoxFor(m=>m.City, new {placeholder="City...", required="required"})
                                </label>
                            </div>
                            <div class="column medium-3">
                                <label>
                                    State
                                    @Html.DropDownListFor(m => m.SelectedState, Model.States)
                                </label>
                            </div>
                            <div class="column medium-3">
                                <label>
                                    Zip Code
                                    @Html.TextBoxFor(m => m.PostalCode, new { placeholder = "Zip Code...", required = "required" })
                                </label>      
                            </div>
                        </div>
                        <label>
                            School Phone
                            @Html.TextBoxFor(m => m.SchoolPhone, new { placeholder = "School Phone...", required = "required" })
                        </label>
                        <label>
                            School Fax
                            @Html.TextBoxFor(m => m.SchoolFax, new { placeholder = "School Fax..." })
                        </label>      
                    </div>
                    <div class="group">
                        <h4>Teacher / Contact Information</h4>
                        <label>
                            Teacher's Name
                            @Html.TextBoxFor(m => m.TeacherName, new { placeholder = "Teacher's Name...", required = "required" })
                        </label>
                        <label>
                            Teacher's Aide
                            @Html.TextBoxFor(m => m.TeacherAide, new { placeholder = "Teacher's Aide..." })
                        </label>
                        <label>
                            Email Address
                            @Html.TextBoxFor(m => m.TeacherEmail, new { placeholder = "Email Address...", type="email", required="required" })
                        </label>
                        <label>
                            Cell Phone
                            @Html.TextBoxFor(m => m.TeacherCellPhone, new { placeholder = "Cell Phone...", required = "required" })
                        </label>
                    </div>
                    <div class="group">
                        <h4>Kids</h4>
                        <label>
                            Number of Kids (20 child minimum)
                            @Html.TextBoxFor(m => m.NumberOfKids, new { placeholder = "Number of Kids (20 child minimum)...", required = "required" })
                        </label>
                        <fieldset>
                            <legend>Package</legend>                            
                            <label for="IncludePackage">                                
                                @Html.RadioButtonFor(m => m.IncludePackage, "Please INCLUDE pumpkin and stickers ($8)", new {@checked="checked"})
                                1 Pumpkin &amp; Stickers ($8.00 per child)
                            </label>
                            <label for="IncludePackage2">                                
                                @Html.RadioButtonFor(m => m.IncludePackage, "One pumpkin NO stickers ($6)", new {id="IncludePackage2"})
                                1 Pumpkin NO Stickers ($6.00 per child)
                            </label>
                        </fieldset>
                    </div>
                    <div class="group">
                        <h4>Adults</h4>
                        <p>Adult admission is $3.00 per adult and does NOT include a pumpkin.</p>
                        <label>
                            Number of Adults
                            @Html.TextBoxFor(m => m.NumberOfAdults, new { placeholder = "Number of Adults...", required = "required" })
                        </label>
                    </div>
                    <div class="group">
                        <h4>Tour Dates</h4>
                        <p>Please select 3 possible dates/times for your trip.</p>
                        <div class="row subgroup">
                            <div class="column medium-6">
                                <label>
                                    Tour Date 1
                                    @Html.TextBoxFor(m => m.TourDate1, new { placeholder = "Tour Date 1...", required = "required", id="TourDate1" })
                                </label>
                            </div>
                            <div class="column medium-6">
                                <label>
                                    Time 1
                                    @Html.DropDownListFor(m => m.SelectedTourTime1, Model.TourTimes)
                                </label>
                            </div>
                            <div class="column medium-6">                                
                                <label>
                                    Tour Date 2
                                    @Html.TextBoxFor(m => m.TourDate2, new { placeholder = "Tour Date 2...", required = "required", id = "TourDate2" })
                                </label>
                            </div>
                            <div class="column medium-6">                                
                                <label>
                                    Time 2
                                    @Html.DropDownListFor(m => m.SelectedTourTime2, Model.TourTimes)
                                </label>
                            </div>
                            <div class="column medium-6">                                
                                <label>
                                    Tour Date 3
                                    @Html.TextBoxFor(m => m.TourDate3, new { placeholder = "Tour Date 3...", required = "required", id = "TourDate3" })
                                </label>
                            </div>
                            <div class="column medium-6">
                                <label>
                                    Time 3
                                    @Html.DropDownListFor(m => m.SelectedTourTime3, Model.TourTimes)
                                </label>
                            </div>
                        </div>
                    </div>
                    <input type="submit" value="send" class="button" />
                </div>
            }
        </div>

    </div>
    <div class="large-4 medium-6 column sidebar sidebar-right">
        <div class="inner">
            <h3>Please Note</h3>
            <p>Tours run October 1st - 31st 2018<br>20 child minimum</p>
            <p>Accept Cash and all major credit cards.  Debit cards NOT accepted.</p>
            <br>
            <h3>Questions</h3>
            <p>Call<br>
                <a href="tel:1-480-892-5874" class="telephone">480-892-5874</a><br>
                OR<br>
                <a href="/contactus" class="button expanded">Send A Message</a></p>
        </div>
    </div>
</div>